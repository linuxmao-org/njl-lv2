@prefix lv2: <http://lv2plug.in/ns/lv2core#> .
@prefix doap: <http://usefulinc.com/ns/doap#> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix njl:  <http://www.jwm-art.net/lv2/njl/> .

njl:risset_scales a lv2:Plugin, lv2:GeneratorPlugin ;

  doap:name "Continuous Risset Scales (LV2)" ;
  doap:developer [
    foaf:name "Nick Lamb" ;
    foaf:homepage <unknown> ;
    foaf:mbox <mailto:njl195@zepler.org.uk> ;
  ] ;
  doap:maintainer [
    foaf:name "James Morris" ;
    foaf:homepage <http://www.jwm-art.net/> ;
    foaf:mbox <mailto:james@jwm-art.net> ;
  ] ;

  doap:license <http://usefulinc.com/doap/licenses/gpl> ;
  lv2:property lv2:hardRtCapable ;

  lv2:port [
    a lv2:AudioPort, lv2:OutputPort ;
    lv2:index 0 ;
    lv2:symbol "output" ;
    lv2:name "Output" ;
  ] ;

  lv2:port [
    a lv2:InputPort, lv2:ControlPort ;
    lv2:index 1 ;
    lv2:symbol "master_gain" ;
    lv2:name "Master Gain" ;
    lv2:default 0 ;
    lv2:minimum -90 ;
    lv2:maximum 12 ;
  ] ;

  lv2:port [
    a lv2:InputPort, lv2:ControlPort ;
    lv2:index 2 ;
    lv2:symbol "base_freq" ;
    lv2:name "Base Frequency" ;
    lv2:default 440 ;
    lv2:minimum 10 ;
    lv2:maximum 10000 ;
  ] ;

  lv2:port [
    a lv2:InputPort, lv2:ControlPort ;
    lv2:index 3 ;
    lv2:symbol "speed" ;
    lv2:name "Speed" ;
    lv2:default 8 ;
    lv2:minimum -440 ;
    lv2:maximum 10000;
  ] .

